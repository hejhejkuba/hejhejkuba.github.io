body {
    margin: 0;
    font-family: Arial, sans-serif;
}

.welcome-part {
    width: 100vw;  
    position: relative;
    height: 100vh; /* Dodanie wysokości, aby zajmował cały ekran */
}

.welcome-part > img {
    width: 100vw;
    height: 100%; /* Ustawienie wysokości na 100%, aby obraz pokrywał cały ekran */
    opacity: 0.5;
    object-fit: cover; /* Dopasowanie obrazu, aby pokrywał cały kontener */
}

.welcome-part > .welcome-text {
    position: absolute;
    top: 40%;
    left: 50%;
    text-align: center;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
}

.welcome-part > .welcome-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    background-color: #555;
    color: white;
    font-size: 16px;
    padding: 12px 24px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

.welcome-text > h1 {
    font-size: 1.8rem;
    color: #000; /* Opcjonalnie: Kolor tekstu */
}

.welcome-arrow {
    appearance: none;
    outline: none;
    background-color: #f0f0f0; /* Tło przycisku */
    border: 2px solid #333; /* Obramowanie przycisku */
    border-radius: 5px; /* Opcjonalnie, zaokrąglenie rogów */
    cursor: pointer;
    display: block;
    width: 3rem;
    height: 2rem;
    transition: background-color 0.3s ease, border-color 0.3s ease; /* Dodanie płynnej animacji przy zmianie */
    position: absolute;
    top: 200%; /* Dostosowanie pozycji pionowej przycisku */
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
}

/* Opcjonalnie, zmiana stylu przy najechaniu */
.welcome-arrow:hover {
    background-color: #e0e0e0; /* Zmiana tła przy najechaniu */
    border-color: #000; /* Zmiana koloru obramowania przy najechaniu */
}
