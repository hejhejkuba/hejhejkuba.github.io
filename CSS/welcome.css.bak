.welcome-part{
	width: 100vw;	
	position: relative;
}
.welcome-part > img {
	width: 100vw;
	opacity: 0.5;
}
.welcome-part > .welcome-text{
	position: absolute;
	top: 40%;
	left: 50%;
	text-align: center;l
	transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
}
.welcome-part > .welcome-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  background-color: #555;
  color: white;
  font-size: 16px;
  padding: 12px 24px;
  border: none;
  cursor: pointer;
  border-radius: 5px;
}