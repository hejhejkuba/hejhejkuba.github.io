
.contact {
    display: flex;
    justify-content: center; /* Wyśrodkowanie poziome elementów */
    align-items: center; /* Wyśrodkowanie pionowe elementów */
    gap: 20px; /* Odstęp między elementami */
    flex-wrap: wrap; /* Umożliwia zawijanie elementów w pionie */
	background-color: #ddd0b1;
	color: gray;
	text-decoration: normal;
	margin: 0px;
	
}

.contact div {
    text-align: center;
}

.contact h3 {
    margin: 0;
	text-align: center;
	padding: 20px;
	
}
.contact a:link{
	text-decoration: none;
	color: black;
	font-weight: bold;
	padding: 20px;
	border: 1px solid transparent; /* Ustawienie początkowej granicy na przezroczystą */
    transition: border-color 0.5s ease-in, border-width 0.5s ease-in;
}
.contact a:hover{
	text-decoration: none;
	font-weight: bold;
	border: 1px solid black;
}

@media screen and (max-width: 600px) {
    .contact {
        flex-direction: column; /* Zmiana układu na pionowy */
        align-items: flex-start; /* Wyrównanie elementów do lewej */
    }

    .contact div {
        width: 100%; /* Zapewnienie pełnej szerokości */
        text-align: left; /* Wyrównanie tekstu do lewej */
    }
}